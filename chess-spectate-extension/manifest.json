{
  "manifest_version": 3,
  "name": "chess-spectate-extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "*://*.chess.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["libs/socket.io.min.js", "injectedScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
